<h1 class = 'text-center'>All Articles</h1>

<p>
<%= link_to 'New Article', new_article_path, class: 'btn btn-warning' %>
</p>

<% @articles.each do |article| %>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= link_to article.title, article_path(article) %></h3>
    </div>

    <div class="panel-body">
      <%= article.description %>
    </div>

    <div class="panel-footer">
    Created: <%= time_ago_in_words(article.created_at) %> ago by <%= article.user.email %>
    <p class = 'pull-right'>
    <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-success btn-sm' %>

    <%= link_to 'Delete', article_path(article), method: :delete, class: 'btn btn-danger btn-sm' %>
  </p>
  <br>
    </div>
  </div>

<% end %>

<div class = 'text-center'>
  <%= will_paginate @articles %>
</div>